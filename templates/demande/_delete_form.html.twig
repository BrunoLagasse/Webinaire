<form method="post" action="{{ path('demande_delete', {'id': demande.id}) }}" onsubmit="return confirm('Voulez-vous supprimer cette demande?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ demande.id) }}">
    <button class="btn btn-danger m-1">Supprimer la demande</button>
</form>
