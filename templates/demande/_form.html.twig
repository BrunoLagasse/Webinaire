{% form_theme form 'bootstrap_4_layout.html.twig' %}
<div class="getin_form wow fadeInUp formulaire-content mt-1 p-2">
{{ form_start(form) }}
    <!-- champs formulaire auto select webinaire id -->
    {{ form_widget(form.obj_requested, {value: obj.id ~ "", class:'hidden-row', label: false }) }} 
    <!-- champs importés de l'entité "Demandeur" -->
    {{ form_row(form.person_asking.lastname, {'class': 'form-control'}) }}  
    {{ form_row(form.person_asking.firstname, {'class': 'form-control'}) }}  
    {{ form_row(form.person_asking.email, {'class': 'form-control'}) }}  
    {{ form_row(form.person_asking.phone_number, {'class': 'form-control'}) }}  
    {{ form_row(form.person_asking.company, {'class': 'form-control'}) }}  
    <!-- dissimulation du champs "date" -->
    {% if form.date == true %}
        {{ form_row(form.date, { 'attr': {'class': 'hidden-row'}, 'label': false} ) }}
    {% else %}
        {{ form_row(form.date , { 'attr': {'class': 'hidden-row'}, 'label': false} ) }}
    {% endif %}
    {# {% if app.user %}
    <a class="btn btn-primary ml-1" href="{{ path('demandeur_index') }}">Retour à la liste</a>
    {% endif %} #}
    <div>
        <p class="d-none d-sm-none d-md-block mention">Vos données personnelles sont utilisées dans le cadre strict de l’exécution et du suivi de votre demande.
            En application de la réglementation sur la protection des données à caractère personnel,
            vous bénéficiez d’un droit d’accès, de rectification, 
            de limitation du traitement ainsi que d’un droit d’opposition et de portabilité de vos données
             - si cela est applicable - que vous pouvez exercer en vous adressant à Alain Renault Communication,
             138 rue Leon Faucher CS 30039 - 51 723 Reims Cedex ou par email à mail@alainrenault.com</p>
        <label for="subscribeNews">Si vous ne souhaitez pas recevoir d’offres de notre part, merci de cocher la case suivante :</label>
        <input style='all: none;'type="checkbox" id="subscribeNews" name="subscribe" value="newsletter">
    </div>
    <button class="submit-btn-webinar-show m-1">{{ button_label|default('Demander le replay') }}<svg style="margin-left: 2vw;" width="23" height="20" viewBox="0 0 23 20" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M10.18 19.5L22.5 0.5L0.5 5.02381L6.22 10L18.1 3.66667L7.54 11.8095L10.18 19.5Z" fill="white"/>
        </svg></button>
    {# Nofification de soumission de la demande #}
    {% for message in app.flashes('success') %}
        <br>
        <hr>
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {# fin de la notif #}
{{ form_end(form) }} 
</div>

