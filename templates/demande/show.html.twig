{% extends 'base.html.twig' %}

{% block title %}Demande{% endblock %}

{% block body %}
    <h1>Détail de la demande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant de la demande</th>
                <td>{{ demande.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ demande.date ? demande.date|date('d-m-Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('demande_index') }}" class="btn btn-primary">Retour à la liste</a>

    <a href="{{ path('demande_edit', {'id': demande.id}) }}" class="btn btn-success m-2">Éditer</a>

    {{ include('demande/_delete_form.html.twig') }}
{% endblock %}
