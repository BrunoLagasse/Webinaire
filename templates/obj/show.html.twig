{% extends 'base.html.twig' %}

{% block title %}Webinaire{% endblock %}

{% block body %}
    <h1 class="text-center m-4">{{ obj.name }}</h1>
    <div class="contenair-fluid">
    <div class="row justify-content-around">
        <div class="col">
            <img src="{{ asset('build/images/webinaire_placeholder.jpg') }}" class="col" alt="image-du-webinaire"/>
            <div class="card-body">
              <h5 class="card-title">{{ obj.name }}</h5>
              <p>Idenditifiant du webinaire: {{ obj.id }}</p>
              <p class="card-text fs-2 text-wrap">{{ obj.summarize }}
              </p>
            </div>
            <a href="{{ path('obj_index') }}" class="btn btn-primary">Retour à la liste</a>
            {% if app.user %}
            <a href="{{ path('obj_edit', {'id': obj.id}) }}" class="btn btn-success">Éditer</a>
        
            {{ include('obj/_delete_form.html.twig') }}
            {% endif %}
        </div>

        <div class="col">
            {% embed "demande/new.html.twig" %}
            {% endembed %}
        </div>
    </div>
    </div>
{% endblock %}
